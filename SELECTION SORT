#include<stdio.h>
void main()
{
  int i,j,n,small,temp=0,t=0;
  t+2;
  printf("enter the size of array");
  scanf("%d",&n);
  t+2;
  int a[100];
  printf("enter the array elements");
  t+2;
  for(i=0;i<n;i++){
  scanf("%d",&a[i]);
  t+2;
  }
  t++;
  for(i=0;i<n;i++){
  t++;
  small=i;
  t+2;
  for(j=i+1;j<n;j++){
  t+2;
  if(a[small]>a[j]){
  small=j;
  t++;
  }
  }
  t++;
  if(i!=small){
  temp=a[i];
  a[i]=a[small];
  a[small]=temp;
  t+2;
  }}
  printf("the sorted array =");
  t+2;
  for(i=0;i<n;i++){
  t+2;
  printf("%d\t",a[i]);
  }
  t+2;
  printf("\n the time complexity=%d",t);
  printf("\n the space complexity =%d",24+(n*4));
  }

